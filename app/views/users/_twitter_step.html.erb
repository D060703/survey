<TABLE width="100%">
  <TR>    
    <TD ALIGN="LEFT" nowrap>
      <h2>Twitter Simulation</h2>    
    </TD>        
    <TD ALIGN="RIGHT" width=400px >
      <%= progress_bar("my_sixty_percent_progress_bar",0.80,true,true) %>
    </TD>  
  </TR>
</TABLE>
  
<div id="seite_plane">
    <div id="left_twitter"></div>
    <div id="seite_twitter">

      <div id="new_tweet"
              onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => 'new_tweet_time'}) %>"
              onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "new_tweet_time"}) %>"
      >
            <%= link_to_remote image_tag('../images/new_tweet_0.png',
                :mouseover => '../images/new_tweet.png'),
                :url => {:action => "new_tweet", :id => @user.id}
            %>

      </div>
      <div id="compose_tweet"
              onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "new_tweet_time"}) %>"
              onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "new_tweet_time"}) %>"
      >
            <%= link_to_remote image_tag('../images/compose_inactive.png',
                :mouseover => '../images/compose_mouseover.png'),
                :url => {:action => "compose_tweet", :id => @user.id}
            %>

      </div>
      <div id="search">

      <%= f.text_area :search, :rows => 1, :cols => 20 , :class => "new-reply-text" %>

  
      </div>
      <div id="message" onMouseover="document.getElementById ('actions').style.display='block';" onMouseout="document.getElementById('actions').style.display='none';">
        <div id="tweeterer">
           <div id="tweeter_name"> <%=h @user.leader_text %> </div>
           <div id="tweeter_name_at">&nbsp;@<%=h @user.leader_text %></div>
        </div>
        <div id="actions" >
          <div id="reply"
              onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "reply_time"}) %>"
              onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "reply_time"}) %>"          
          >
            <%= link_to_remote image_tag('../images/reply_einzeln.png',
                 :mouseover => '../images/reply_unterstrichen.png'),
                  :url => {:action => "reply", :id => @user.id}
            %>
          </div>
          <div id = "retweet"          
              onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "retweet_time"}) %>"
              onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "retweet_time"}) %>"
          >
            <%= link_to_remote image_tag('../images/retweet_einzeln.png',
                 :mouseover => '../images/retweet_unterstrichen.png'),
                 :url => {:action => "retweet", :id => @user.id}
            %>
          </div>
          <div id = "favorite"
              onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "favorite_time"}) %>"
              onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "favorite_time"}) %>"
          >
            <%= link_to_remote image_tag('../images/favorite_einzeln.png',
                :mouseover => '../images/favorite_unterstrichen.png'),
                :url => {:action => "favorite", :id => @user.id}
            %>
          </div>
          <div id="open">
            Open
          </div>        
        </div>                
        <div id="tweet"
              onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "message_hover_time"}) %>"
              onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "message_hover_time"}) %>"
             >
          <p>            
            <%= @user.seen_message %>
          </p>
        </div>           
      </div>
    <div id="tweet_sent" style="display: none;">Your Tweet has been sent!</div>
    <div id="compose_tweet_seite" style="display: none;">
      <%= render "compose_tweet_seite", :f => f  %> 
    </div>
    </div>
    <div id="right_twitter"></div>

    <div id="request_retweet_intensity" style="display: none;">
      <%= render "request_retweet_intensity_seite", :f => f  %> 
    </div>
    
    <div id="new_tweet_seite" style="display: none;">
      <%= render "new_tweet_seite", :f => f  %>
      
    </div> 

    <div id="reply_seite" style="display: none;">
      <%= render "reply_seite", :f => f  %> 
    </div>
</div>
<div id="hinweis_back">If you press 'Back', all your actions within the Twitter simulation will be saved, but eventually not displayed anymore<p></p></div>
<div id="hinweis_continue">Please press only 'Continue', if you would like to close the Twitter simulation<p></p></div>
